<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff0f5"
        android:orientation="vertical">
    
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/themecolor"
                    android:padding="15dp">
    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Orders"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="17dp" />
    
                    <TextView
                        android:id="@+id/shopmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track Order >"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />
    
                </LinearLayout>
    
                <!-- icons here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp">
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:id="@+id/btncartview"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:background="@drawable/ic_shopping_cart_black_24dp" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Cart View"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:id="@+id/btnprofileview"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:background="@drawable/ic_person_black_24dp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Profile"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
                        
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:id="@+id/btnaboutus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:background="@drawable/ic_baseline_map" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="View Location"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:id="@+id/webview"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:background="@drawable/ic_web_asset_black_24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Website"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                </LinearLayout>
    
            </LinearLayout>
    
        </LinearLayout>
    
        <!-- service layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Service"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp" />
    
    
                </LinearLayout>
    
                <!-- icons here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="80dp">
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/ic_dialog_email"
                            android:backgroundTint="@color/cardview_dark_background" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Messages"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/ic_dialog_dialer"
                            android:backgroundTint="@color/cardview_dark_background" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Explore"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@android:drawable/stat_notify_chat"
                            android:backgroundTint="@color/cardview_dark_background" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="My Review"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
    
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/ic_menu_help"
                            android:backgroundTint="@color/cardview_dark_background" />
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:text="Help"
                            android:textColor="@color/textColor"
                            android:textSize="12dp" />
    
                    </LinearLayout>
    
                </LinearLayout>
    
            </LinearLayout>
    
        </LinearLayout>
        
    </LinearLayout>
</androidx.core.widget.NestedScrollView>